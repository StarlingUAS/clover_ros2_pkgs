<?xml version="1.0"?>
<launch>

    <node pkg="tf2_ros" exec="static_transform_publisher" name="map_flipped_frame" args="0 0 0 3.1415926 3.1415926 0 map map_flipped"/>

    <!-- simplified offboard control -->
    <node name="simple_offboard" pkg="clover_ros2" exec="simple_offboard" output="screen" clear_params="true">
        <param name="reference_frames/body" value="map"/>
        <param name="reference_frames/base_link" value="map"/>
        <param name="reference_frames/navigate_target" value="map"/>
        <param name="reference_frames/main_camera_optical" value="map"/>
    </node>
</launch>